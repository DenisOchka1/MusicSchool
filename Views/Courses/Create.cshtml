@model MusicSchool.ViewModels.Courses.CreateFormOfCourseViewModel
@{
    ViewData["Title"] = "Создание - Курсы";
}

<nav arial-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-asp-controller="Home" asp-action="Index">Главная</a></li>
        <li class="breadcrumb-item"><a asp-asp-controller="Courses" asp-action="Index">Курсы</a></li>
        <li class="breadcrumb-item active">Создание</li>
    </ol>
</nav>

<h3>
    <a class="btn text-dark" asp-action="Index" title="Вернуться к списку">
        <i class="fas fa-arrow-left"></i>
    </a>
    Добавление курса
</h3>
<hr />

<div class="row">
    <div class="col-md-5">
        <form method="post" asp-controller="Courses" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CourseName" class="control-label"></label>
                <input asp-for="CourseName" class="form-control" />
                <span asp-validation-for="CourseName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourseDescr" class="control-label"></label>
                <input asp-for="CourseDescr" class="form-control" />
                <span asp-validation-for="CourseDescr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CountLesson" class="control-label"></label>
                <input asp-for="CountLesson" class="form-control" />
                <span asp-validation-for="CountLesson" class="text-danger"></span>
            </div>
            @* <div class="form-group">
                <label asp-for="IdUser" class="control-label"></label>
                <select asp-for="IdUser" class ="form-control" asp-items="ViewBag.IdUser"></select>
            </div> *@
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
